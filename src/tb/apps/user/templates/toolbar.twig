<div class="row">
    <div class="col-bb5-73 bb5-border-right">
        <div class="row">
            <div class="col-bb5-100">
                <div class="tab-pane">
                    <div class="row">
                        <div class="col-bb5-26 bb5-border-right align-middle">
                            <p class="txt-center">
                                <button type="button" id="toolbar-new-user-action"  class="btn btn-default-grey btn-sm">
                                    <i class="fa fa-user"></i> {{ 'create_user'|trans }}
                                </button>
                            </p>
                        </div>
                        <form class="col-bb5-74" id="bb-toolbar-user-search-form">
                            <div class="row">
                                <div class="col-bb5-50">
                                    <p class="row form-group">
                                        <span class="col-bb5-x">{{ 'user_filters'|trans }}</span>
                                    </p>
                                    <p class="row form-group">
                                        <span class="col-bb5-x"><label for="bb-user-name">{{ 'name'|trans }}</label></span>
                                        <span class="col-bb5-55">
                                            <input type="text" class="form-control input-xs" id="bb-user-name" name="name">
                                        </span>
                                    </p>
                                    <p class="row form-group">
                                        <span class="col-bb5-x">
                                            <label for="bb-user-status">{{ 'status'|trans }}</label>
                                        </span>
                                        <span class="col-bb5-55">
                                            <select class="form-control input-xs" id="bb-user-status" name="activated">
                                                <option value="all">{{ 'all'|trans }}</option>
                                                <option value="1">{{ 'active'|trans }}</option>
                                                <option value="0">{{ 'inactive'|trans }}</option>
                                            </select>
                                        </span>
                                    </p>
                                </div>
                                <div class="col-bb5-50">
                                    <p class="row form-group">
                                        <span class="col-bb5-x"><label for="bb-user-login">{{ 'login'|trans }}</label></span>
                                        <span class="col-bb5-55">
                                            <input type="text" id="bb-user-login" class="form-control input-xs" name="login">
                                        </span>
                                    </p>
                                    <p class="row form-group">
                                        <span class="col-bb5-x"><label for="bb-user-email">{{ 'email'|trans }}</label></span>
                                        <span class="col-bb5-55">
                                            <input type="text" id="bb-user-email" class="form-control input-xs" name="email">
                                        </span>
                                    </p>
                                    <p class="row form-group">
                                        <span class="col-bb5-55">
                                            <button type="submit" class="btn btn-default-grey btn-xs">{{ 'search'|trans }}</button>
                                        </span>
                                        <span class="col-bb5-55">
                                            <button type="reset" id="bb-toolbar-user-reset-search-form" class="btn btn-default-grey btn-xs">{{ 'reset'|trans }}</button>
                                        </span>
                                    </p>
                                </div>
                                <div class="col-bb5-50">
                                    <p>&nbsp;</p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>