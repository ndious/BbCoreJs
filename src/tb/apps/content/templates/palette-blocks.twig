<div id="{{ id }}">
    {% for category in categories %}
        {% if category.show %}
        <div class="bb5-data-toggle">
            <div class="bb5-data-toggle-header">
                {{ category.name }}
                <span class="bb5-data-toggle-trigger">
                    <i class="fa fa-angle-down"></i>
                </span>
            </div>
            <div class="bb5-data-drpdown">
                <div class="bb5-list-data bb5-list-bordered">
                    {% for block in category.contents %}
                    <div class="bb5-list-data-item bb-block">
                        <div class="bb5-extension-pane">
                            <div class="pull-left">
                                <figure class="bb5-extension-img">
                                    <img {% if draggable == true %}draggable="true" class="bb-dnd"{% endif %} data-bb-type="{{ block.type }}" style="width:75px;" src="{{ block.thumbnail }}">
                                </figure>
                            </div>
                            <div class="float-reflow">
                                <p>
                                    <strong>{{ block.label }}</strong>
                                </p>
                                <p>{{ bundle.description }}</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}
</div>